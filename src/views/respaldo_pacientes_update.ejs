    <div id = "consultar" class = "container col-lg8 col-xs-12 col-centered">
      <br>
      <center><h5>Modificar datos del paciente</h5></center>
      <center><b><font color = "red">Favor de verificar que la fecha de nacimiento y los datos de opción múltiple sean correctos.</font></b></center>
      <br>
      <form action ="/pacientes.ejs/info_paciente.ejs/<%= data[0].idPaciente %>" method ="post">
      <div id="inputs" class = "container col-lg8 col-xs-12 col-centered">
        <br>
        <table id = "tab">
          <tr>
            <th><label>Valor anterior</label></th>
            <th><label>Nuevo valor</label></th>
          </tr>
          <tr>
            <td><label for="nombr1">Nombre</label></td>
            <td><label for="nombr2">Nombre</label></td>
          </tr>      
          <tr>
            <td><input type="text" id ="nombr1" name="NombreV" class="form-control" value = "<%= data[0].Nombre %>" disabled></td>
            <td><input type="text" id ="nombr2" name="Nombre" class="form-control" value = "<%= data[0].Nombre %>"></td>
          </tr>
          <tr>
            <td><label for="apPat1">Apellido paterno</label></td>
            <td><label for="apPat2">Apellido paterno</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="apPat1" name="ApPaternoV" class="form-control" value = "<%= data[0].ApPaterno %>" disabled></td>
            <td><input type="text" id ="apPat2" name="ApPaterno" class="form-control" value = "<%= data[0].ApPaterno %>"></td>
          </tr>
          <tr>
            <td><label for="apMat1">Apellido materno</label></td>
            <td><label for="apMat2">Apellido materno</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="apMat1" name="ApMaternoV" class="form-control" value = "<%= data[0].ApMaterno %>" disabled></td>
            <td><input type="text" id ="apMat2" name="ApMaterno" class="form-control" value = "<%= data[0].ApMaterno %>"></td>
          </tr>
          <tr>
            <td><label for="fechaN1">Fecha de nacimiento</label></td>
            <td><label for="fechaN2">Fecha de nacimiento</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="fechaN1" name="FechaNacV" class="form-control" value = "<%= data[0].FechaNac %>" readonly = "readonly"></td>
            <td><input type="date" id ="fechaN2" name="FechaNac" class="form-control"></td>
          </tr>
          <tr>
            <td><label>Género</label></td>
            <td><label>Género</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="gen1" name="GeneroV" class="form-control" value = "<%= data[0].Genero %>" disabled></td>
            <td>
              <div class="radio">
                <label>
                  <input type="radio" name="Genero" id="masc" value="M" checked>
                  Masculino
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="Genero" id="fem" value="F">
                  Femenino
                </label>
              </div>  
            </td>
          </tr>
          <tr>
            <td><label for="tel1">Teléfono</label></td>
            <td><label for="tel2">Teléfono</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="tel1" name="TelefonoV" class="form-control" value = "<%= data[0].Telefono %>" disabled></td>
            <td><input type="text" id ="tel2" name="Telefono" class="form-control" value = "<%= data[0].Telefono %>"></td>
          </tr>
          <tr>
            <td><label for="alerg">Alergias</label></td>
            <td><label for="alerg">Alergias</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="aler1" name="AlergiasV" class="form-control" value = "<%= data[0].Alergias %>" disabled></td>
            <td>
              <div class="radio">
                <label>
                  <input type="radio" name="Alergias" id="y" value="Si" checked>
                  Sí
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="Alergias" id="n" value="No">
                    No
                </label>
              </div>  
            </td>
          </tr>
          <tr>
            <td><label for="tips1">Tipo de sangre</label></td>
            <td><label for="tips2">Tipo de sangre</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="tipS1" name="TipoSangreV" class="form-control" value = "<%= data[0].TipoSangre %>" disabled></td>
            <td>
              <select class="form-control" name = "TipoSangre">
                <option value = "A+">A+</option>
                <option value = "B+">B+</option>
                <option value = "O+">O+</option>
                <option value = "AB+">AB+</option>
                <option value = "A-">A-</option>
                <option value = "B-">B-</option>
                <option value = "O-">O-</option>
                <option value = "AB-">AB-</option>
              </select>
            </td>
          </tr>
          <tr>
            <td><label>Estado civil</label></td>
            <td><label>Estado civil</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="edoC1" name="EdoCivilV" class="form-control" value = "<%= data[0].EdoCivil %>" disabled></td>
            <td>
              <div class="radio">
                <label>
                  <input type="radio" name="EdoCivil" id="Solter2" value="Soltero(a)" checked> 
                  Soltero(a)
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="EdoCivil" id="Casad2" value="Casado(a)"> 
                  Casado(a)
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="EdoCivil" id="Divor2" value="Divorciado(a)"> 
                  Divorciado(a)
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="EdoCivil" id="Viud2" value="Viudo(a)"> 
                  Viudo(a)
                </label>
              </div>
            </td>
          </tr>
          <tr>
            <td><label for="noInci1">Número de incidencias</label></td>
            <td><label for="noInci2">Número de incidencias</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="noInci1" name="NoIncidenciasV" class="form-control" value = "<%= data[0].NoIncidencias %>" disabled></td>
            <td><input type="text" id ="noInci2" name="NoIncidencias" class="form-control" value = "<%= data[0].NoIncidencias %>"></td>
          </tr>
          <tr>
            <td><label for="idDoc1">ID del doctor</label></td>
            <td><label for="idDoc2">ID del doctor</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="idDoc1" name="idDoctorV" class="form-control" value = "<%= data[0].idDoctor %>" disabled></td>
            <td><input type="text" id ="idDoc2" name="idDoctor" class="form-control" value = "<%= data[0].idDoctor %>" disabled></td>
          </tr>
        </table>
        <br>
      </div>
      <br>
      <div id = "botones" class = "container">
      <center><button type="submit" id="modificar" class="btn btn-success">Modificar datos</button></center>
      </div>
      <br>
      </form>
    </div>
