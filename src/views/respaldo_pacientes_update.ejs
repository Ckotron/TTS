        <ul class="navbar-nav ml-auto">
          <li class="nav-item mx-0 mx-lg-1">
            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/pacientes.ejs/info_paciente.ejs/<%= data[0].idPaciente %>">Regresar</a>
          </li>
          <li class="nav-item mx-0 mx-lg-1">
