    <div id = "consultar" class = "container col-lg8 col-xs-12 col-centered">
      <br>
      <center><h5>Registrar paciente</h5></center>
      <br>
      <form action ="/pacientes.ejs/add_pac" method ="post">
      <div id="inputs" class = "container col-lg8 col-xs-12 col-centered">
        <br>
        <label for="nombr">Nombre</label>      
        <input type="text" id ="nombr" name="Nombre" class="form-control" placeholder="Nombre">
        <table id = "tab">
          <tr>
            <td><label for="apPat">Apellido paterno</label></td>
            <td><label for="apMat">Apellido materno</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="apPat" name="ApPaterno" class="form-control" placeholder="Apellido paterno"></td>
            <td><input type="text" id ="apMat" name="ApMaterno" class="form-control" placeholder="Apellido materno"></td>
          </tr>
        </table>
        <table id = "tabgen">
          <tr>
            <td width = >
              <label for="fechaNac">Fecha de nacimiento</label>      
            </td>
            <td><label>Género</label></td>
            <td></td>
          </tr>   
          <tr>
          <td><input type="date" id ="fechaN" name="FechaNac" class="form-control"></td>
          <td><div class="radio">
            <label>
              <input type="radio" name="Genero" id="masc" value="M" checked>
              Masculino
            </label>
          </div></td>
          <td><div class="radio">
            <label>
              <input type="radio" name="Genero" id="fem" value="F">
              Femenino
            </label>
          </div></td>
          </tr>
        </table>
        <table id = "tab">
          <tr>
            <td><label for="tel">Teléfono</label></td>
            <td><label for="alerg">Alergias</label></td>
            <td></td>
            <td><label for="tips">Tipo de sangre</label></td>
          </tr>      
          <tr>
            <td><input type="text" id ="tel" name="Telefono" class="form-control" placeholder="Teléfono"></td>
            <td><div class="radio">
            <label>
              <input type="radio" name="Alergias" id="y" value="Si" checked>
              Sí
            </label>
          </div></td>
          <td><div class="radio">
            <label>
              <input type="radio" name="Alergias" id="n" value="No">
              No
            </label>
          </div></td>
          <td>
            <select class="form-control" name = "TipoSangre">
              <option value = "A+">A+</option>
              <option value = "B+">B+</option>
              <option value = "O+">O+</option>
              <option value = "AB+">AB+</option>
              <option value = "A-">A-</option>
              <option value = "B-">B-</option>
              <option value = "O-">O-</option>
              <option value = "AB-">AB-</option>
            </select>
          </td>
          </tr>
        </table>
        <label>Estado civil</label>
        <div class="radio">
            <label>
              <input type="radio" name="EdoCivil" id="Solter" value="Soltero(a)" checked> Soltero(a)
            </label>
            &nbsp;&nbsp;
            <label>
              <input type="radio" name="EdoCivil" id="Casad" value="Casado(a)"> Casado(a)
            </label>
            &nbsp;&nbsp;
            <label>
              <input type="radio" name="EdoCivil" id="Divor" value="Divorciado(a)"> Divorciado(a)
            </label>
            &nbsp;&nbsp;
            <label>
              <input type="radio" name="EdoCivil" id="Viud" value="Divorciado(a)"> Viudo(a)
            </label>
        </div>
        <table id = "tab">
          <tr>
            <td><label for="noInci">Número de incidencias</label></td>
            <td><label for="idDoc">ID del doctor</label></td>
          </tr>
          <tr>
            <td><input type="text" id ="noInci" name="NoIncidencias" class="form-control" placeholder="Número de incidencias"></td>
            <td><input type="text" id ="idDoc" name="idDoctor" class="form-control" placeholder="ID del doctor"></td>
          </tr>
        </table>
        <br>
      </div>
      <br>
      <div id = "botones" class = "container">
      <center><button type="submit" id="registrar" class="btn btn-success">Registrar paciente</button></center>
      </div>
      </form>
    </div>
